{
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": false,
    "resolveJsonModule":true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}